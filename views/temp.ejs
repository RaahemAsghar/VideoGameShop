
<div class="p-2">
  <div class="row">
    <% for(var i =0; i < data2.length; i++){%>
        <div class="col-lg-3 col-md-6 col-sm-12 mt-3">
          <div class="card shadow shadow-sm">
            <a href="/console/<%=data2[i].id%>">
              <%
              var image_url = data2[i].image_url
              if(image_url.slice(0,4) != 'http'){
                image_url = '/coollogo_com-12786558.png'
              }
            %>
    
            <img
            class="game-image img-thumbnail img-responsive"
            src=<%=image_url%>
            alt="Card image cap"
          />
          </a>
    
            <div class="card-body">
    
              <p class="card-text">Title: <%= data2[i].name %></p>
    
              <p class="card-text text-gray-700">
                Platform: <%= data2[i].platform %>
              </p>
    
              <p class="card-text text-success">
                <i class="fa fa-money"></i> PKR<%=data2[i].sale_price%>
              </p>
              <% 
                let stock = data2[i].stock  
                let dis = ''
                if(stock == 0){
                  dis = 'disabled'
                }
              %>
              Stock: <%=stock%>
              <div class="float-right">
              <a href="/cart/add/console/<%=data2[i].id%>" class="btn btn-primary <%=dis%>">Add to Cart</a>
            </div>
    
            </div>
          </div>
        </div>
        <% } %>
      
     </div>
    </div>
    
    