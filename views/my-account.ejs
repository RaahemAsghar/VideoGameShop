<%-include('includes/header')%>
 

<div class="row justify-content-center">
<div class="col-6">

    <div class="card shadow">
        <div class="card-body">
            <h2 class="text-center text-primary mb-4">Account Information</h2>
            <div class="row text-center">
                <div class="col-6">
                    <h5>First Name:</h5>
                    <h7><%=user.first_name%></h7>
                </div>
                <div class="col-6">
                    <h5>Last Name:</h5>
                    <h7><%=user.last_name%></h7>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-12">
                    <h5>Email:</h5>
                    <h7><%=user.email%></h7>
                </div>
            </div>
            <div class="row text-center mt-5">
                <div class="col-12">
                    <h5>Billing and Shipping Address:</h5>
                    <h7><%=user.address%></h7>
                </div>
               
            </div>
            <div class="row text-center mt-5">
                <div class="col-12">
                    <h5>Phone Number:</h5>
                    <h7><%=user.phone%></h7>
                </div>
            </div>

            <div class="row text-center mt-5">
                <div class="col-12">

                    <h5>Password <a data-toggle="tooltip" data-placement="" title="Change Password" href="/user/edit-account"><i class="fa fa-edit" style="vertical-align: middle;" ></i></a>
                    </h5>
                </div>
            </div>
           
        </div>
    </div>
    
</div>
</div>


<!-- body here -->


<%-include('includes/footer')%>