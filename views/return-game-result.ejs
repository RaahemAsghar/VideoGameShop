<%-include('includes/header')%>

<div class="row justify-content-center">
    <div class="col"> 
      <form action="" method="post">
        <% for(var i =0; i < data.length; i++){%>
          <div class="form-group">
            <label class="text-dark" for="transid">Transaction ID</label>
            <input required='required' class="form-control" type="text" name="transid" value="<%=data[i].id%>" />
          </div>
          <div class="form-group">
            <label class="text-dark" for="title">Game ID (for Admin Use)</label>
            <input class="form-control" type="text" name="gameID" value ="<%=data2[i].id%>" />
          </div>
          <div class="form-group">
            <label class="text-dark" for="title">Name of Game</label>
            <input class="form-control" type="text" name="title" value ="<%=data2[i].title%>" />
          </div>
          <div class="form-group">
            <label class="text-dark" for="platform">Platform</label>
            <input required='required' class="form-control" type="text" name="platform" value="<%=data2[i].platform%>" />
          </div>
      <% } %>
        
        <div class="form-group">
          <label class="text-dark" for="reason">Reason for Return</label>
          <textarea
            class="form-control"
            cols="30"
            rows="10"
            id="editor"
            name="reason"
            required='required'
          ></textarea>
        </div>
        <!-- <script src = "../js/scripts.js"></script> -->
        <div class="form-group">
          <input
            type="submit"
            class="btn btn-success"
            name="submit_post"
            value="Return Game"
          />
        </div>
      </form>
    </div>
  </div>


<%-include('includes/footer')%>