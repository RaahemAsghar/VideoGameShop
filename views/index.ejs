<%-include('includes/header')%>
<%msg.forEach((m)=>{%>
                                
  <div class="alert alert-info alert-dismissible fade show" role="alert">
      <!--<strong>Username</strong> or <strong>Password</strong> is incorrect-->
      <%=m%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
  </div>
  <%})%>
<div class="row justify-content-center">
  <div class="col-6">
    <form class="form" action="/user/search-result" method="GET">
      <div class="form-group">
        <div class="input-group">
          <input type="text" name="search" class="form-control" placeholder="Search...">
          <button class="btn btn-dark" type="submit" value="search">Search</button>
        </div>
      </div>
    </form>
  </div>
</div>

<h1 class="text-danger text-center mt-3">Latest Titles</h1>
<div class="p-2">
  <div class="row">
    <% for(var i =0; i < data.length; i++){%>
    <div class="col-lg-3 col-md-6 col-sm-12 mt-3">
      <div class="card shadow shadow-sm">
        <a href="/game/<%=data[i].id%>">
          <img
          class="game-image img-thumbnail img-responsive"
          src="<%=data[i].image_url%>"
          alt="Card image cap"
        />
        </a>
        <div class="card-body">
          <p class="card-text">Title: <%= data[i].title %></p>
          <!-- <p class="card-text"><%= data[i].tags %></p> -->
          <p class="card-text text-gray-700">
            Platform: <%= data[i].platform %>
          </p>

          <p class="card-text text-success">
            <i class="fa fa-money"></i> PKR<%=data[i].sale_price%>
          </p>
          <% 
            let stock = data[i].stock  
            let dis = ''
            if(stock == 0){
              dis = 'disabled'
            }
          %>
          Stock: <%=stock%>
          <div class="float-right">
          <a href="/cart/add/game/<%=data[i].id%>" class="btn btn-primary <%=dis%>">Add to Cart</a>
        </div>

        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<%-include('includes/footer')%>
