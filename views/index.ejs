<%-include('includes/header')%>
<%msg.forEach((m)=>{%>
                                
  <div class="alert alert-info alert-dismissible fade show" role="alert">
      <!--<strong>Username</strong> or <strong>Password</strong> is incorrect-->
      <%=m%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
  </div>
  <%})%>
  <%-include('includes/search')%>

  <%if(data1.length == 0 && data2.length == 0 && data3.length == 0){%>
    <h1 class="text-danger text-center mt-3">Nothing to show here!</h1>
    <%}%>


<%if(data1.length > 0){%>
<h1 class="text-danger text-center mt-3">Latest Titles</h1>
<%}%>
<div class="p-2">
  <div>
    
    </div>
  <div class="row">


    <% for(var i =0; i < data1.length; i++){%>
    <div class="col-lg-3 d-flex col-md-6 col-sm-12 mt-3">
      <div class="card shadow shadow-sm">
        <a href="/game/<%=data1[i].id%>">
          <%
            var image_url = data1[i].image_url
            if(image_url.slice(0,4) != 'http'){
              image_url = '/coollogo_com-12786558.png'
            }
    
          %>

          <img
          class="game-image img-thumbnail img-responsive"
          src=<%=image_url%>
          alt="Card image cap"
        />
        </a>
        <div class="card-body">
          <p class="card-text">Title: <%= data1[i].title %></p>
        
          <p class="card-text text-gray-700">
            Platform: <%= data1[i].platform %>
          </p>

          <p class="card-text text-success">
            <i class="fa fa-money"></i> PKR<%=data1[i].sale_price%>
          </p>
          <% 
            let stock = data1[i].stock  
            let dis = ''
            if(stock == 0){
              dis = 'disabled'
            }
          %>
          Stock: <%=stock%>
          <div class="float-right">
          <a href="/cart/add/game/<%=data1[i].id%>" class="btn btn-primary <%=dis%>">Add to Cart</a>
        </div>

        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<%if(data3.length > 0){%>
  <h1 class="text-danger text-center mt-3">Latest Consoles</h1>  
  <%}%>
  
<div class="p-2">
  <div class="row">
    <% for(var i =0; i < data3.length; i++){%>
        <div class="col-lg-3 d-flex col-md-6 col-sm-12 mt-3">
          <div class="card shadow shadow-sm">
            <a href="/console/<%=data3[i].id%>">
