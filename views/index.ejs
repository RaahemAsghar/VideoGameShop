              var image_url = data3[i].image_url
              if(image_url.slice(0,4) != 'http'){
                image_url = '/coollogo_com-12786558.png'
              }
            %>
    
            <img
            class="game-image img-thumbnail img-responsive"
            src=<%=image_url%>
            alt="Card image cap"
          />
          </a>
    
            <div class="card-body">
    
              <p class="card-text">Title: <%= data3[i].name %></p>
    
             
    
              <p class="card-text text-success">
                <i class="fa fa-money"></i> PKR<%=data3[i].sale_price%>
              </p>
              <% 
                let stock = data3[i].stock  
                let dis = ''
                if(stock == 0){
                  dis = 'disabled'
                }
              %>
              Stock: <%=stock%>
              <div class="float-right">
              <a href="/cart/add/console/<%=data3[i].id%>" class="btn btn-primary <%=dis%>">Add to Cart</a>
            </div>
    
            </div>
          </div>
        </div>
        <% } %>
      
     </div>
</div>
    


