              <p class="card-text">Title: <%= data2[i].title %></p>
              <!-- <p class="card-text"><%= data[i].tags %></p> -->
              <p class="card-text text-gray-700">
                Platform: <%= data[i].platform %>
              </p>
    
              <p class="card-text text-success">
                <i class="fa fa-money"></i> PKR<%=data2[i].sale_price%>
              </p>
              <% 
                let stock = data2[i].stock  
                let dis = ''
                if(stock == 0){
                  dis = 'disabled'
                }
              %>
              Stock: <%=stock%>
              <div class="float-right">
              <a href="/cart/add/game/<%=data2[i].id%>" class="btn btn-primary <%=dis%>">Add to Cart</a>
            </div>
    
            </div>
          </div>
        </div>
        <% } %>
  </div>
</div>

