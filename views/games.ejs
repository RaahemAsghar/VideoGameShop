                currClass ="active"
            }
            if(link == 'game'){
            hlink = "/game/page/"+ (i + 1).toString()
          }
          if(link == 'price'){
            hlink = "/game/priceasc/page/" + (i + 1)
          }
          
          if(link == 'category'){
