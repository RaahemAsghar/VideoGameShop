<%-include('includes/header')%>

<div class="row justify-content-center">
    <div class="col"> 
      <form action="" method="post">
        <div class="form-group">
          <label class="text-dark" for="title">Name of Game</label>
          <input class="form-control" type="text" name="title" required='required' />
        </div>
        <div class="form-group">
          <label class="text-dark" for="platform">Platform</label>
          <input required='required' class="form-control" type="text" name="platform" value="" />
        </div>
        <div class="form-group">
          <label class="text-dark" for="reason">Reason for Return</label>
          <textarea
            class="form-control"
            cols="30"
            rows="10"
            id="editor"
            name="reason"
            required='required'
          ></textarea>
        </div>
        <!-- <script src = "../js/scripts.js"></script> -->
        <div class="form-group">
          <input
            type="submit"
            class="btn btn-success"
            name="submit_post"
            value="Return Game"
          />
        </div>
      </form>
    </div>
  </div>


<%-include('includes/footer')%>