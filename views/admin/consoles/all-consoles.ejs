<%-include('../includes/header')%>
<div class="table-responsive text-primary" style="filter: blur(0px) brightness(100%);">
    <table class="table table-hover">
    <thead>
    <tr>
        <th class="text-info">Id</th>
        <th class="text-info">Name</th>
        <th class="text-info">Manufacturer</th>
        <th class="text-info">Tags</th>
        <th class="text-primary">Sale Price</th>
        <th class="text-info">Stock</th>
        <th class="text-warning">Edit</th>
        <th class="text-danger">Delete</th>
      </tr>
    </thead>
    <tbody>
        <% for(var i =0; i < data.length; i++){%>
            <tr>
              <td class="text-light"><%= data[i].id %></td>
              <td class="text-light"><%= data[i].name %></td>
              <td class="text-light"><%= data[i].manufacturer %></td>
              <td class="text-light"><%= data[i].tags %></td>
              <td class="text-light"><%= data[i].sale_price %></td>
              <td class="text-light"><%= data[i].stock %></td>
              <td>
                <a class="btn btn-success pt-0 pb-0 pl-1 pr-1" href="#">Edit</a>
              </td>
              <td>
                <button
                  id = "delete-console-btn"
                  value="<%=data[i].id%>"
                  type="button"
                  class="btn btn-danger pt-0 pb-0 pl-1 pr-1"
                  data-toggle="modal"
                  data-target="#delete-console-modal"
                >
                  Delete
                </button>
              </td>
            </tr>
          <% } %>
    </tbody>
</table>
</div>

<!-- Modal -->
<div
  class="modal fade"
  id="delete-console-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id='delete-console-body'>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">
          No!
        </button>
        <a type="link" href="#" id="confirm-delete" class="btn btn-danger">
          Yes!
        </a>
      </div>
    </div>
  </div>
</div>



<%-include('../includes/footer')%>
