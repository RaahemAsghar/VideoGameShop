<%-include('../includes/header')%>
<%msg.forEach((m)=>{%>

  <div class="alert <%=m.type%> alert-dismissible fade show" role="alert">
    <!--<strong>Username</strong> or <strong>Password</strong> is incorrect-->
    <%=m.msg%>
    <button
      type="button"
      class="close"
      data-dismiss="alert"
      aria-label="Close"
    >
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <%})%>
<div class="row">
  <div class="col-6">
    <form method="post" action="/admin/manufacturers">
      <label class="text-success">Enter Manufacturer to add</label>
      <div class="form-group">
        <input class="form-control" type="text" name="name" />
      </div>
      <div class="form-group">
        <input
          class="btn btn-primary"
          type="submit"
          value="Add"
        />
      </div>
    </form>
  </div>
  <div class="col-6">
    <div>
      <div
        class="table-responsive text-success"
        style="filter: blur(0px) brightness(100%)"
      >
        <table class="table table-hover">
          <thead class="text-success">
            <tr>
              <th>Manufacturer ID</th>
              <th>Manufacturer Name</th>
              <th>Delete</th>
              <% for(var i =0; i < data.length; i++){%>
                <tr>
                  <td><%= data[i].id %></td>
                  <td><%= data[i].name %></td>
                  <td><a class="btn btn-danger pt-0 pb-0 pl-1 pr-1" href="/admin/del-man/<%= data[i].id %>">Delete</a></td>
                </tr>
              <% } %>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%-include('../includes/footer')%>
