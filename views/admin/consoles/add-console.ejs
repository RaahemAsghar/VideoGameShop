<%-include('../includes/header')%>

<div class="row justify-content-center">
  <div class="col"> 
    <form action="" method="post">
      <div class="form-group">
        <label class="text-light" for="name">Console Name</label>
        <input class="form-control" type="text" name="name" />
      </div>
      <div class="form-group">
        <label class="text-light" for="sale_price">Sale Price</label>
        <input class="form-control" type="text" name="sale_price" value="" />
      </div>
      <div class="form-group">
        <label class="text-light" for="category">Choose Manufacturer</label>
        <select class="form-control" name="category" id="">
          <option value="cat_id">Manufacturer</option>
        </select>
      </div>
      <div class="form-group">
        <label class="text-light" for="image">Image URL</label><br />
        <input class="form-control" type="text" name="image" />
      </div>
      <div class="form-group"></div>
      <div class="form-group">
        <label class="text-light" for="tags">Tags</label>
        <input type="text" class="form-control" name="tags" />
      </div>
      <div class="form-group">
        <label class="text-light" for="post_content">Description</label>
        <textarea
          class="form-control"
          cols="30"
          rows="10"
          id="editor"
          name="description"
        ></textarea>
      </div>
      <!-- <script src = "../js/scripts.js"></script> -->
      <div class="form-group">
        <input
          type="submit"
          class="btn btn-success"
          name="submit_post"
          value="Add Game"
        />
      </div>
    </form>
  </div>
</div>

<%-include('../includes/footer')%>
