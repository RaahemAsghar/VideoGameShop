<%-include('../includes/header')%>
<%msg.forEach((m)=>{%>

  <div class="alert <%=m.type%> alert-dismissible fade show" role="alert">
    <!--<strong>Username</strong> or <strong>Password</strong> is incorrect-->
    <%=m.msg%>
    <button
      type="button"
      class="close"
      data-dismiss="alert"
      aria-label="Close"
    >
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <%})%>
<div class="row justify-content-center">
  <div class="col"> 
    <form action="" method="post">
      <div class="form-group">
        <label class="text-light" for="title">Game Title</label>
        <input class="form-control" type="text" name="title" required='required' />
      </div>
      <div class="form-group">
        <label class="text-light" for="platform">Platform</label>
        <input required='required' class="form-control" type="text" name="platform" value="" />
      </div>
      <div class="form-group">
        <label class="text-light" for="sale_price">Sale Price</label>
        <input required='required' class="form-control" type="text" name="sale_price" value="" />
      </div>
      <div class="form-group">
        <label class="text-light" for="rent_price">Rent Price</label>
        <input required='required' class="form-control" type="text" name="rent_price" value="" />
      </div>
      <div class="form-group">
        <label class="text-light" for="exampleFormControlSelect2">Select Categories</label>
        <select multiple required="required" class="form-control" name="categories" id="exampleFormControlSelect2">
          <%categories.forEach((e)=>{%>
            <option value="<%=e.id%>"><%=e.name%></option>

          <%})%>

        <!-- <option value="">1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option> -->
        </select>
        <br>
        <span class="text-light">Hold down the Ctrl (windows) or Command (Mac) button to select multiple options.</span>
      </div>
      <div class="form-group">
        <label class="text-light" for="image">Image URL</label><br />
        <input required='required' class="form-control" type="text" name="image" />
      </div>
      <div class="form-group"></div>
      <div class="form-group">
        <label class="text-light" for="tags">Tags</label>
        <input required='required' type="text" class="form-control" name="tags" />
      </div>
      <div class="form-group">
        <label class="text-light" for="description">Game Description</label>
        <textarea
          class="form-control"
          cols="30"
          rows="10"
          id="editor"
          name="description"
          required='required'
        ></textarea>
      </div>
      <!-- <script src = "../js/scripts.js"></script> -->
      <div class="form-group">
        <input
          type="submit"
          class="btn btn-success"
          name="submit_post"
          value="Add Game"
        />
      </div>
    </form>
  </div>
</div>

<%-include('../includes/footer')%>
