<%-include('../includes/header')%>
<%msg.forEach((m)=>{%>

  <div class="alert <%=m.type%> alert-dismissible fade show" role="alert">
    <!--<strong>Username</strong> or <strong>Password</strong> is incorrect-->
    <%=m.msg%>
    <button
      type="button"
      class="close"
      data-dismiss="alert"
      aria-label="Close"
    >
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <%})%>
<div
  class="table-responsive text-primary"
  style="filter: blur(0px) brightness(100%)"
>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="text-info">Id</th>
        <th class="text-info">Title</th>
        <th class="text-info">Categories</th>
        <th class="text-info">Tags</th>
        <th class="text-primary">Sale Price</th>
        <th class="text-success">Rent Price</th>
        <th class="text-info">Platform</th>
        <th class="text-info">Stock</th>
        <th class="text-danger">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i =0; i < data.length; i++){%>
      <tr>
        <td class="text-light"><%= data[i].id %></td>
        <td class="text-light"><%= data[i].title %></td>
        <td class="text-light">Category</td>
        <td class="text-light"><%= data[i].tags %></td>
        <td class="text-light"><%= data[i].sale_price %></td>
        <td class="text-light"><%= data[i].rent_price %></td>
        <td class="text-light"><%= data[i].platform %></td>
        <td class="text-light"><%= data[i].stock %></td>
        <td>
          <button
            type="button"
            class="btn btn-danger pt-0 pb-0 pl-1 pr-1"
            data-toggle="modal"
            data-target="#confirm-delete"
            data-href = '/admin/del-game/<%=data[i].id%>'
            value="<%=data[i].id%>"
          >
            Delete
          </button>
        </td>
      </tr>

      <% } %>
    </tbody>
  </table>
</div>


<!-- Modal -->
<div
  class="modal fade"
  id="confirm-delete"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id='delete-body'>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">
          No!
        </button>
        <a id="confirm-delete" class="btn btn-danger btn-ok">
          Yes!
        </a>
      </div>
    </div>
  </div>
</div>

<%-include('../includes/footer')%>
